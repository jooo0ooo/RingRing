<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_weight="30"
            android:layout_width="fill_parent"
            android:src="@drawable/who_are_you"
            android:layout_height="match_parent" />

        <!-- 개인설정에서 사진을 저장하면 불러와야함. 현재는 윤곽을 잡기위해 임의사진을 이용 -->

        <LinearLayout
            android:layout_weight="27"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/register_student"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/student"
                android:gravity="center_horizontal"
                android:text="student"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/register_professor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/professor"
                android:gravity="center_horizontal"
                android:text="professor"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>