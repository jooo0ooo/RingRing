<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_weight="30"
            android:layout_width="fill_parent"
            android:src="@drawable/test_image"
            android:layout_height="match_parent" />

        <!-- 개인설정에서 사진을 저장하면 불러와야함. 현재는 윤곽을 잡기위해 임의사진을 이용 -->

        <LinearLayout
            android:layout_weight="70"
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/class_setting"
                android:id="@+id/class_setting_professor"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:gravity="center_vertical"
                android:layout_gravity="bottom"
                android:layout_height="match_parent" />

            <ImageView
                android:src="@drawable/personal_setting"
                android:layout_height="match_parent"
                android:id="@+id/personal_setting_professor"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:gravity="center_vertical"
                android:layout_gravity="bottom" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="80">

            <ImageView
                android:id="@+id/home_image_professor"
                android:src="@drawable/home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:layout_gravity="bottom"/>

            <ImageView
                android:id="@+id/setting_image_professor"
                android:src="@drawable/setting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:layout_gravity="bottom"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>